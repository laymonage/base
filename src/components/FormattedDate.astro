---
interface Props {
  date: Date;
  locale?: string;
  format?: Intl.DateTimeFormatOptions;
  class?: string;
}

const {
  date,
  locale = 'en-us',
  format = {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  },
  class: className,
} = Astro.props;
---

<time class:list={className} datetime={date.toISOString()}>
  {date.toLocaleDateString(locale, format)}
</time>
