---
import { type CollectionEntry, getCollection } from 'astro:content';
import readingTime from 'reading-time';
import BlogPost from '../../layouts/BlogPost.astro';
import { humanizeLogSlug } from '../../content/config';

export async function getStaticPaths() {
  const logs = await getCollection('logs');
  return logs.map((log) => ({
    params: { slug: log.id },
    props: log,
  }));
}
type Props = CollectionEntry<'logs'>;

const log = Astro.props;
---

<BlogPost
  {...log.data}
  date={humanizeLogSlug(log.id)}
  readingTime={readingTime(log.rendered!.html).text}
>
  {log?.rendered?.html && <Fragment set:html={log.rendered.html} />}
</BlogPost>
